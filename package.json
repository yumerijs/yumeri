    "yumeri": "workspace:^",
    "yumeri-plugin-console": "workspace:^"
  },
  "devDependencies": {
    "@types/fs-extra": "^11",
    "@types/node": "^22.15.19",
    "cross-env": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2"
}
