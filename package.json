{
  "name": "yumeri-dev",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "package/*",
    "plugins/*"
  ],
  "scripts": {
    "start": "yumeri start",
    "dev": "cross-env NODE_ENV=development yumeri start -r esbuild-register -r tsconfig-paths/register",
    "setup": "yumeri-scripts setup"
  },
  "dependencies": {
    "@yumerijs/scripts": "workspace:^",
    "chokidar": "^4.0.3",
