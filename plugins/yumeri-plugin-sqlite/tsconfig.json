{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "composite": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }